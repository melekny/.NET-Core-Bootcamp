
@*Changing the Home Page*@
@{
    ViewData["Title"] = "Home Page";
}

@model UserViewModel

@*Creating a form with FirstName, LastName, Email and Password fields*@

<html>

<h2 style="color:#2151a2;text-align:center">
    GİRİŞ EKRANI
</h2>

<body>

    <form id="userForm" method="POST">

        <div class="form-group">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control-range" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control-range" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input type="Email" asp-for="Email" class="form-control-range" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <input type="password" asp-for="Password" class="form-control-range" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>


        <button type="submit" style="margin:auto;display:block" class="btn btn-primary btn-lg"> Giriş Yap </button><br>

    </form>
</body>
</html>

@*Creating Custom Views for Properties of the Response Class:"Data","Success","Error"*@

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        div {
            margin-bottom: 15px;
            padding: 4px 12px;
        }

        .data-valid {
            background-color: #ddffdd;
            border-left: 6px solid #04AA6D;
        }

        .data-unvalid {
            background-color: #ffdddd;
            border-left: 6px solid #f44336;
        }

        .success-valid {
            background-color: #ddffdd;
            border-left: 6px solid #04AA6D;
        }

        .success-unvalid {
            background-color: #ffdddd;
            border-left: 6px solid #f44336;
        }

        .error-valid {
            background-color: #ddffdd;
            border-left: 6px solid #04AA6D;
        }

        .error-unvalid {
            background-color: #ffdddd;
            border-left: 6px solid #f44336;
        }
    </style>
</head>
</html>

@Html.Raw(ViewData["Data"])
@Html.Raw(ViewData["Success"])
@Html.Raw(ViewData["Error"])






